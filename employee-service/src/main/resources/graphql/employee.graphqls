schema {
  query: EmployeeQueries
  mutation: EmployeeMutations
}

type EmployeeQueries {
  employees: [Employee]
  employee(id: ID!): Employee!
}

type EmployeeMutations {
  newEmployee(employee: EmployeeInput!): Employee
}

input EmployeeInput {
  organizationId: Int!
  departmentId: Int!
  name: String!
  age: Int!
  position: String!
}

type Employee {
  id: ID!
  organizationId: Int!
  departmentId: Int!
  name: String!
  age: Int!
  position: String!
}